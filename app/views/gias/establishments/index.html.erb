<%= govuk_link_to("Back to Dashboard", gias_dashboard_path) %>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-one-quarter">
        <%= form_with(model: @filter_object,
                      url: gias_establishments_path,
                      scope: :filters,
                      method: :get,
                      builder: GOVUKDesignSystemFormBuilder::FormBuilder) do |form| %>

            <%= form.govuk_check_boxes_fieldset :name, legend: { text: "Name Matching" } do %>
                <%= form.govuk_check_box "name", 'provider', label: { text: "Provider" } %>
                <%= form.govuk_check_box "name", 'sites', label: { text: "Sites" } %>
                <%= form.govuk_check_box "name", 'provider_or_sites', label: { text: "Provider or Sites" } %>
            <% end %>

            <%= form.govuk_check_boxes_fieldset :postcode, legend: { text: "Postcode Matching" } do %>
                <%= form.govuk_check_box "postcode", 'provider', label: { text: "Provider" } %>
                <%= form.govuk_check_box "postcode", 'sites', label: { text: "Sites" } %>
                <%= form.govuk_check_box "postcode", 'provider_or_sites', label: { text: "Provider or Sites" } %>
            <% end %>

            <%= form.govuk_submit "Submit" %>
        <% end %>
    </div>

    <div class="govuk-grid-column-three-quarters">
        <table class="govuk-table govuk-!-margin-bottom-8">
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th class="govuk-table__header" scope="col">
                        Establishments
                    </th>
                </tr>
            </thead>

            <tbody class="govuk-table__body">
                <% @establishments.each do |establishment| %>
                    <tr class="govuk-table__row">
                        <td class="govuk-table__cell">
                            <h3><%= govuk_link_to("#{establishment.name} - #{establishment.urn}",
                                                  gias_establishment_path(establishment.id)) %></h3>

                            <div style="padding-left: 4ex">
                            <% matches_grouped_by_provider_for_establishment(establishment).each do |provider, matches| %>
                                <h4>Provider: <%= govuk_link_to("#{provider.provider_name} - #{provider.provider_code}",
                                                                gias_provider_path(provider)) %></h4>

                                <ul class="govuk-list govuk-list--bullet">
                                    <% matches.each do |match| %>
                                    <li><%= match %></li>
                                    <% end %>
                                </ul>
                                <% end %>
                            </div>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<%== pagy_nav(@pagy) %>
