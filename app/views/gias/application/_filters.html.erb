<%= form_with(model: @filter_object,
              url: form_url,
              scope: :filters,
              method: :get,
              builder: GOVUKDesignSystemFormBuilder::FormBuilder) do |form| %>

    <%= form.govuk_text_field(:search, label: { text: "Search", class: "govuk-label--m" }) %>

    <%= form.govuk_radio_buttons_fieldset :provider, legend: { text: "Providers matched to establishments by:" } do %>
        <%= form.govuk_radio_button "provider", "all", label: { text: "All providers" } %>
        <%= form.govuk_radio_button "provider", "name", label: { text: "Name" } %>
        <%= form.govuk_radio_button "provider", "postcode", label: { text: "Postcode" } %>
        <%= form.govuk_radio_button "provider", 'name_and_postcode', label: { text: "Name and postcode" } %>
        <%= form.govuk_radio_button "provider", 'name_or_postcode', label: { text: "Name or postcode" } %>
    <% end %>

    <%= form.govuk_radio_buttons_fieldset :site, legend: { text: "Provider sites matched to establishment by:" } do %>
        <%= form.govuk_radio_button "site", "all", label: { text: "All sites" } %>
        <%= form.govuk_radio_button "site", "name", label: { text: "Name" } %>
        <%= form.govuk_radio_button "site", "postcode", label: { text: "Postcode" } %>
        <%= form.govuk_radio_button "site", "name_and_postcode", label: { text: "Name and postcode" } %>
        <%= form.govuk_radio_button "site", "name_or_postcode", label: { text: "Name or postcode" } %>
    <% end %>

    <%= form.govuk_submit "Submit" %>
<% end %>
